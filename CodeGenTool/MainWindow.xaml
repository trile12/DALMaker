<Window
    x:Class="CodeGenTool.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CodeGenTool"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DAL MAKER"
    Width="1366"
    Height="768"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{materialDesign:MaterialDesignFont}"
    TextElement.FontSize="14"
    TextElement.FontWeight="Medium"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme
                    BaseTheme="Light"
                    PrimaryColor="DeepPurple"
                    SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Main Content  -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <!--  Left Panel: Connection Settings  -->
            <materialDesign:Card Margin="0,0,8,0" Padding="16">
                <ScrollViewer VerticalScrollBarVisibility="Hidden">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,16"
                            FontSize="18"
                            FontWeight="Medium">
                            Database Connection
                        </TextBlock>

                        <!--  Connection Settings  -->
                        <TextBox
                            Margin="0,8,0,8"
                            materialDesign:HintAssist.Hint="Server"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Text="{Binding Server, UpdateSourceTrigger=PropertyChanged}" />

                        <TextBox
                            Margin="0,8,0,8"
                            materialDesign:HintAssist.Hint="User"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Text="{Binding User, UpdateSourceTrigger=PropertyChanged}" />

                        <TextBox
                            x:Name="PasswordBox"
                            Margin="0,8,0,16"
                            materialDesign:HintAssist.Hint="Password"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}" />

                        <Button
                            Height="40"
                            Margin="0,0,0,24"
                            materialDesign:ButtonAssist.CornerRadius="5"
                            Click="ConnectBtn_Click"
                            Content="Connect"
                            Style="{StaticResource MaterialDesignRaisedButton}" />

                        <!--  Database Selection  -->
                        <TextBlock
                            Margin="0,0,0,8"
                            FontSize="16"
                            FontWeight="Medium">
                            Select Database
                        </TextBlock>
                        <ComboBox
                            Margin="0,0,0,16"
                            materialDesign:HintAssist.Hint="Select Database"
                            ItemsSource="{Binding Databases}"
                            SelectedItem="{Binding Database, UpdateSourceTrigger=PropertyChanged}"
                            Style="{StaticResource MaterialDesignOutlinedComboBox}" />

                        <!--  Namespace  -->
                        <TextBox
                            Margin="0,8,0,8"
                            materialDesign:HintAssist.Hint="Namespace"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Text="{Binding Namespace, UpdateSourceTrigger=PropertyChanged}" />

                        <!--  Output Path  -->
                        <TextBlock
                            Margin="0,16,0,8"
                            FontSize="16"
                            FontWeight="Medium">
                            Output Settings
                        </TextBlock>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBox
                                Grid.Column="0"
                                materialDesign:HintAssist.Hint="Output Path"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Text="{Binding OutputPath, UpdateSourceTrigger=PropertyChanged}" />
                            <Button
                                Grid.Column="1"
                                Margin="8,0,0,0"
                                Click="BrowseFolderBtn_Click"
                                Content="Browse"
                                Style="{StaticResource MaterialDesignRaisedButton}" />
                        </Grid>

                        <CheckBox
                            Margin="0,16,0,0"
                            Content="Generate SQL File"
                            IsChecked="{Binding GenerateSqlFile}" />

                        <Button
                            Height="40"
                            Margin="0,24,0,0"
                            materialDesign:ButtonAssist.CornerRadius="5"
                            Click="GenerateBtn_Click"
                            Content="Generate Code"
                            Style="{StaticResource MaterialDesignRaisedAccentButton}" />
                    </StackPanel>
                </ScrollViewer>
            </materialDesign:Card>

            <!--  Right Panel: Tables and Templates  -->
            <Grid Grid.Column="1" Margin="8,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Tables Selection  -->
                <materialDesign:Card
                    Grid.Row="0"
                    Margin="0,0,0,8"
                    Padding="16">
                    <DockPanel>
                        <TextBlock
                            Margin="0,0,0,16"
                            DockPanel.Dock="Top"
                            FontSize="18"
                            FontWeight="Medium">
                            Select Tables
                        </TextBlock>

                        <ListView ItemsSource="{Binding Tables}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox VerticalAlignment="Center" IsChecked="{Binding IsSelected}" />
                                        <TextBlock
                                            Margin="8,0,0,0"
                                            VerticalAlignment="Center"
                                            Text="{Binding Name}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </DockPanel>
                </materialDesign:Card>

                <!--  Templates Selection  -->
                <materialDesign:Card
                    Grid.Row="1"
                    Margin="0,8,0,0"
                    Padding="16">
                    <DockPanel>
                        <TextBlock
                            Margin="0,0,0,16"
                            DockPanel.Dock="Top"
                            FontSize="18"
                            FontWeight="Medium">
                            Select Templates
                        </TextBlock>

                        <TreeView ItemsSource="{Binding TemplateGroups}">
                            <TreeView.ItemTemplate>
                                <HierarchicalDataTemplate ItemsSource="{Binding Templates}">
                                    <Expander Header="{Binding Name}" IsExpanded="{Binding IsExpanded}">
                                        <ItemsControl Margin="32,8,0,0" ItemsSource="{Binding Templates}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <CheckBox
                                                        Margin="0,4,0,4"
                                                        Content="{Binding Name}"
                                                        IsChecked="{Binding IsSelected}" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Expander>
                                </HierarchicalDataTemplate>
                            </TreeView.ItemTemplate>
                        </TreeView>
                    </DockPanel>
                </materialDesign:Card>
            </Grid>
        </Grid>

        <!--  Status Bar  -->
        <materialDesign:ColorZone
            Grid.Row="2"
            Height="36"
            Mode="PrimaryLight">
            <DockPanel LastChildFill="True">
                <ProgressBar
                    Width="100"
                    Margin="16,0,0,0"
                    DockPanel.Dock="Left"
                    IsIndeterminate="True"
                    Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" />

                <TextBlock
                    Margin="16,0"
                    VerticalAlignment="Center"
                    Text="{Binding StatusMessage}" />
            </DockPanel>
        </materialDesign:ColorZone>
    </Grid>
</Window>