<Window
    x:Class="CodeGenTool.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CodeGenTool.Converters"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DAL MAKER"
    Width="1366"
    Height="768"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{materialDesign:MaterialDesignFont}"
    TextElement.FontSize="14"
    TextElement.FontWeight="Medium"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme
                    BaseTheme="Light"
                    PrimaryColor="DeepPurple"
                    SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.Resources>
            <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Margin="16,8,16,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="auto" />

                    </Grid.ColumnDefinitions>
                    <TextBox
                        Grid.Column="0"
                        Height="45"
                        Padding="8"
                        materialDesign:HintAssist.Hint="Output Path"
                        FontSize="15"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding OutputPath, UpdateSourceTrigger=PropertyChanged}" />
                    <Button
                        Grid.Column="1"
                        Width="120"
                        Margin="8,0,0,0"
                        HorizontalAlignment="Right"
                        Command="{Binding BrowseOutputCommand}"
                        Content="Browse"
                        Style="{StaticResource MaterialDesignRaisedLightButton}" />
                </Grid>
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="8,8,16,0">
                <TextBox
                    Grid.Column="0"
                    Height="45"
                    Padding="8"
                    materialDesign:HintAssist.Hint="Namespace"
                    FontSize="15"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding Namespace, UpdateSourceTrigger=PropertyChanged}" />

            </StackPanel>
        </Grid>


        <Grid Grid.Row="1" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <materialDesign:Card Margin="0,0,8,0" Padding="16">
                <ScrollViewer VerticalScrollBarVisibility="Hidden">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,16"
                            FontSize="18"
                            FontWeight="Medium">
                            Database Connection
                        </TextBlock>
                        <TextBox
                            Margin="0,8,0,8"
                            materialDesign:HintAssist.Hint="Server"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Text="{Binding Server, UpdateSourceTrigger=PropertyChanged}" />

                        <TextBox
                            Margin="0,8,0,8"
                            materialDesign:HintAssist.Hint="User"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Text="{Binding User, UpdateSourceTrigger=PropertyChanged}" />

                        <TextBox
                            x:Name="PasswordBox"
                            Margin="0,8,0,16"
                            materialDesign:HintAssist.Hint="Password"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}" />

                        <Button
                            Height="40"
                            Margin="0,0,0,24"
                            materialDesign:ButtonAssist.CornerRadius="5"
                            Command="{Binding ConnectCommand}"
                            Content="Connect"
                            Style="{StaticResource MaterialDesignRaisedLightButton}" />

                        <TextBlock
                            Margin="0,0,0,8"
                            FontSize="16"
                            FontWeight="Medium">
                            Select Database
                        </TextBlock>
                        <ComboBox
                            x:Name="DatabaseComboBox"
                            Margin="0,0,0,16"
                            materialDesign:HintAssist.Hint="Select Database"
                            ItemsSource="{Binding Databases}"
                            SelectedItem="{Binding Database, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                            SelectionChanged="DatabaseComboBox_SelectionChanged"
                            Style="{StaticResource MaterialDesignOutlinedComboBox}" />

                        <Button
                            Height="40"
                            Margin="0,24,0,0"
                            materialDesign:ButtonAssist.CornerRadius="5"
                            Command="{Binding GenerateCommand}"
                            Content="Generate Code"
                            Style="{StaticResource MaterialDesignRaisedAccentButton}" />
                    </StackPanel>
                </ScrollViewer>
            </materialDesign:Card>
            <Grid Grid.Column="1" Margin="8,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <materialDesign:Card Padding="16">
                    <DockPanel>
                        <TextBlock
                            Margin="0,0,0,16"
                            DockPanel.Dock="Top"
                            FontSize="18"
                            FontWeight="Medium">
                            Select Tables &amp; Columns
                        </TextBlock>

                        <TreeView x:Name="TablesTreeView" ItemsSource="{Binding Tables}">
                            <TreeView.Resources>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#333333" />
                                </Style>
                                <Style TargetType="CheckBox">
                                    <Setter Property="Foreground" Value="#333333" />
                                </Style>
                            </TreeView.Resources>
                            <TreeView.ItemTemplate>
                                <HierarchicalDataTemplate ItemsSource="{Binding Columns}">
                                    <Button
                                        Padding="0"
                                        HorizontalContentAlignment="Left"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Click="Database_Button_Click">
                                        <StackPanel Orientation="Horizontal">
                                            <CheckBox
                                                x:Name="databaseCheckBox"
                                                VerticalAlignment="Center"
                                                Checked="Database_CheckBox_Checked"
                                                IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                IsHitTestVisible="False" />
                                            <TextBlock
                                                Margin="8,0,0,0"
                                                VerticalAlignment="Center"
                                                FontWeight="Bold"
                                                Text="{Binding Name}" />
                                        </StackPanel>
                                    </Button>
                                    <HierarchicalDataTemplate.ItemTemplate>
                                        <DataTemplate>
                                            <Button
                                                Padding="0"
                                                HorizontalContentAlignment="Left"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Click="Column_Button_Click">
                                                <StackPanel Orientation="Horizontal">
                                                    <CheckBox
                                                        x:Name="tableCheckBox"
                                                        VerticalAlignment="Center"
                                                        Checked="Column_CheckBox_Checked"
                                                        IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                        IsHitTestVisible="False"
                                                        Unchecked="Column_CheckBox_Unchecked" />
                                                    <TextBlock
                                                        Margin="8,0,0,0"
                                                        VerticalAlignment="Center"
                                                        Text="{Binding Name}" />
                                                    <TextBlock
                                                        Margin="8,0,0,0"
                                                        VerticalAlignment="Center"
                                                        Foreground="Gray"
                                                        Text="{Binding DataType}" />
                                                </StackPanel>
                                            </Button>
                                        </DataTemplate>
                                    </HierarchicalDataTemplate.ItemTemplate>
                                </HierarchicalDataTemplate>
                            </TreeView.ItemTemplate>
                        </TreeView>
                    </DockPanel>
                </materialDesign:Card>
                <materialDesign:Card
                    Grid.Column="1"
                    Margin="8,0,0,0"
                    Padding="16">
                    <DockPanel>
                        <TextBlock
                            Margin="0,0,0,16"
                            DockPanel.Dock="Top"
                            FontSize="18"
                            FontWeight="Medium">
                            Select Templates
                        </TextBlock>

                        <TreeView ItemsSource="{Binding TemplateGroups}">
                            <TreeView.ItemTemplate>
                                <HierarchicalDataTemplate ItemsSource="{Binding Templates}">
                                    <Expander Header="{Binding Name}" IsExpanded="{Binding IsExpanded}">
                                        <ItemsControl Margin="32,8,0,0" ItemsSource="{Binding Templates}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <CheckBox
                                                        Margin="0,4,0,4"
                                                        Content="{Binding Name}"
                                                        IsChecked="{Binding IsSelected}" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Expander>
                                </HierarchicalDataTemplate>
                            </TreeView.ItemTemplate>
                        </TreeView>
                    </DockPanel>
                </materialDesign:Card>
            </Grid>
        </Grid>
        <materialDesign:ColorZone
            Grid.Row="2"
            Height="36"
            Mode="PrimaryLight">
            <DockPanel LastChildFill="True">
                <!--<ToggleButton
                    x:Name="ThemeToggle"
                    Width="80"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Command="{Binding ToggleThemeCommand}"
                    CommandParameter="{Binding IsDarkTheme}"
                    IsChecked="{Binding IsDarkTheme}"
                    Style="{StaticResource MaterialDesignSwitchToggleButton}"
                    ToolTip="Switch Theme">
                    <ToggleButton.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Margin="0,0,8,0" Kind="WeatherNight" />
                            </StackPanel>
                        </DataTemplate>
                    </ToggleButton.ContentTemplate>
                </ToggleButton>-->

                <ProgressBar
                    Width="400"
                    Margin="16,0,0,0"
                    DockPanel.Dock="Left"
                    IsIndeterminate="True"
                    Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}" />

                <TextBlock
                    Margin="16,0"
                    VerticalAlignment="Center"
                    Text="{Binding StatusMessage}" />
            </DockPanel>
        </materialDesign:ColorZone>
    </Grid>
</Window>